<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".actividades.MenuInicioActivity" >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:titleTextColor="@color/blanco"
            android:subtitleTextColor="@color/blanco"
            app:titleTextColor="@color/blanco"
            app:subtitleTextColor="@color/blanco"
            android:theme="@style/ToolbarA"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button_entradas"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="0dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/circular_purple"
                        android:text="Entradas"
                        android:textColor="#ffffff"
                        android:drawableTop="@drawable/in_white"
                        android:drawablePadding="-20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button_salidas"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="0dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/circular_blue"
                        android:text="Salidas"
                        android:textColor="#ffffff"
                        android:drawableTop="@drawable/out_white"
                        android:drawablePadding="-20dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button_inventario"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="0dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/circular_green"
                        android:text="Inventario"
                        android:textColor="#ffffff"
                        android:drawableTop="@drawable/inventario_me_white"
                        android:drawablePadding="-20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button_transferencia"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="0dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/circular_yellow"
                        android:text="Transfer"
                        android:textColor="#ffffff"
                        android:drawableTop="@drawable/transfer_me_white"
                        android:drawablePadding="-20dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button_devolucion"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="0dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/circular_orange"
                        android:text="DevoluciÃ³n"
                        android:textColor="#ffffff"
                        android:drawableTop="@drawable/devolucion_me_white"
                        android:drawablePadding="-20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button_ajuste"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="0dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/circular_bluegrey"
                        android:text="Ajuste"
                        android:textColor="#ffffff"
                        android:drawableTop="@drawable/ajuste_me_white"
                        android:drawablePadding="-20dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:gravity="left"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button_apartado"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="0dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/circular_grey"
                        android:text="Apartado"
                        android:textColor="#ffffff"
                        android:drawableTop="@drawable/apartado_me_white"
                        android:drawablePadding="-20dp" />

                </LinearLayout>

            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_inicio_manufacturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_inicio_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_inicio_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_inicio_model_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_inicio_model_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>-->

        </LinearLayout>

    </ScrollView>

</LinearLayout>
